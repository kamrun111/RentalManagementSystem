    <!-- for data table -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BuildingBalance</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Admin" asp-controller="Tenant" asp-action="Index">Tenant</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Admin" asp-controller="Expenditure" asp-action="Index">Expenditure</a>
                        </li>
@*                         @if (User.IsInRole(SD.Role_Admin))
                        { *@

                            <li class="nav-item dropdown"> <!-- dropdown menu-->
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Basic Setup
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="admin" asp-controller="Location" asp-action="Index">Location</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="admin" asp-controller="Floor" asp-action="Index">Floor</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="admin" asp-controller="Flat" asp-action="Index">Flat</a>
                                    </li>
                                    <li class="nav-item">
                                    <a class="dropdown-item" asp-area="admin" asp-controller="Expense" asp-action="Index">Expense</a>
                                    </li> @* Web Api Intregation*@

                                    <li><hr class="dropdown-divider"></li>

                                </ul> 
                            </li> <!--end dropdown menu-->
@*                         } *@

                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-dark text-white">
        <div class="container">
            Developed <i class="bi bi-bag-heart-fill"></i> by kamrun Nahar
        </div>
    </footer>
