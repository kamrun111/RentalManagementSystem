@model MonthEntryVM

@{
    ViewData["Title"] = "Month Entries Information";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-4">
    <h2 class="mb-4">Month Entries Information</h2>

    <div class="row">
        <!-- LEFT: Table -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header fw-semibold">All Months</div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Month</th>
                                    <th>Start</th>
                                    <th>End</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th style="width: 110px;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.MonthEntryList.Any() == true)
                                {
                                    var i = 1;
									foreach (var m in Model.MonthEntryList.ToList())
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@m.MonthName</td>
                                            <td>@m.StartDate.ToString("dd-MM-yyyy")</td>
                                            <td>@m.EndDate.ToString("dd-MM-yyyy")</td>
											<td>@m.TypeIdentifier.TypeIdentifierName</td>
                                            <td>@m.Status</td>
                                            <td class="d-flex">
                                                <button type="button" class="btn btn-sm btn-dark" onclick="editMonth(@m.MonthEntryId, '@m.MonthName', '@m.StartDate.ToString("dd-MM-yyyy")', '@m.EndDate.ToString("dd-MM-yyyy")', @m.TypeIdentifierId)">
                                                    Edit
                                                </button>

                                                <form asp-action="Complete" asp-route-id="@m.MonthEntryId" method="post">
                                                    <button type="submit" class="btn btn-sm btn-success ms-2">
                                                        Complete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4">No entries yet.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- RIGHT: Create Form (for Editing with Placeholders) -->
        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card shadow-sm">
                <div class="card-header fw-semibold" id="cardHeaderText">@(Model.MonthEntry.MonthEntryId != 0 ? "Update" : "Create") </div>
                <div class="card-body">

                    <form id="editForm" method="post" asp-action="CreateUpdate">
                        <input asp-for="MonthEntry.MonthEntryId" hidden id="MonthEntryId" />

                        <div class="mb-3">
                            <label asp-for="MonthEntry.MonthName" class="form-label">Month Name</label>
                            <input asp-for="MonthEntry.MonthName" id="MonthName" class="form-control" placeholder="e.g., January 2026" />
                            <span asp-validation-for="MonthEntry.MonthName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MonthEntry.StartDate" class="form-label">Start Date</label>
                            <input asp-for="MonthEntry.StartDate" id="StartDate" type="date" class="form-control" value="@DateTime.Now.ToString("dd-MM-yyyy")" />
                            <span asp-validation-for="MonthEntry.StartDate" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MonthEntry.EndDate" class="form-label">End Date</label>
                            <input asp-for="MonthEntry.EndDate" id="EndDate" type="date" class="form-control" value="@DateTime.Now.ToString("dd-MM-yyyy")    />
                            <span asp-validation-for="MonthEntry.EndDate" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MonthEntry.TypeIdentifierId" class="form-label">Type (optional)</label>
                            <select asp-for="MonthEntry.TypeIdentifierId" asp-items="ViewBag.TypeIdentifierList" id="TypeIdentifierId" class="form-control" required>
                                <option value="" disabled selected>Select Type (optional)</option>
                            </select>
                            <span asp-validation-for="MonthEntry.TypeIdentifierId" class="text-danger small"></span>

                        </div>
                        @if (Model.MonthEntry != null && Model.MonthEntry.MonthEntryId != 0)
						{
                            <button type="submit" class="btn btn-success w-100"> Update</button>
						}
						else

						{
                            <button type="submit" class="btn btn-success w-100"> Create</button>
						}

                    </form>
                </div>
            </div>

            <p class="text-muted small mt-2">
                Tip: You can keep <em>StartDate</em> and <em>EndDate</em> the first and last day of the named month.
            </p>
        </div>







    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/monthEntry.js"></script>
}

