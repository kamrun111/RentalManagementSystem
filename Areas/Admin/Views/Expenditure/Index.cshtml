@model IEnumerable<Expenditure>

@{
    ViewData["Title"] = "Expenditures List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Expenditure</a>
</p>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Location</th>
            <th>Details Count</th>
            <th>Date</th>
            <th>Description</th>
            <th>Total Amount</th>
            <th>Details Count</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Location.LocationName</td>
                <td>@item.ExpenditureDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Description</td>
                <td>@string.Format("{0:C}", item.TotalAmount)</td>
                <td>@item.ExpenditureDetails?.Count ?? 0</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ExpenditureId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.ExpenditureId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.ExpenditureId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

